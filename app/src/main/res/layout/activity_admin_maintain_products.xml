<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    tools:context=".Activities.Admin.AdminMaintainProductsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/admin_maintainProducts_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />
        <EditText
            android:id="@+id/admin_maintainProduct_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/habibi"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_below="@+id/admin_maintainProducts_product_image"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/admin_maintainProduct_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/habibi"
            android:hint="Product Description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:layout_below="@+id/admin_maintainProduct_product_name"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/admin_maintainProduct_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/habibi"
            android:hint="Product Price"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@+id/admin_maintainProduct_product_description"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/admin_maintainProduct_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/habibi"
            android:text="Apply Changes"
            android:textAlignment="center"
            android:textColor="#b1a9a9"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@+id/admin_maintainProduct_product_price"
            android:layout_marginTop="3dp"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/admin_deleteProduct_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/habibi"
            android:text="Delete Product"
            android:textAlignment="center"
            android:textColor="#b1a9a9"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_below="@+id/admin_maintainProduct_btn"
            android:layout_marginTop="3dp"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:layout_margin="5dp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>