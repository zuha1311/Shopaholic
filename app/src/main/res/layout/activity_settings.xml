<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Buyer.SettingsActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/appBar"
            android:id="@+id/app_bar_settings">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_settings">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/habibi"
                        android:id="@+id/close_settings_btn"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/habibi"
                        android:id="@+id/update_settings_btn"/>


                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/settings_profile_pic"
            android:src="@drawable/profile"
            android:layout_below="@+id/app_bar_settings"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Profile Picture"
            android:layout_marginTop="7dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:fontFamily="@font/habibi"
            android:id="@+id/profile_image_change_btn"
            android:layout_below="@+id/settings_profile_pic"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_phone_number"
            android:layout_below="@id/profile_image_change_btn"
            android:hint="Mobile Number"
            android:layout_margin="15dp"
            android:textColorHint="#000000"
            android:padding="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_full_name"
            android:layout_below="@id/settings_phone_number"
            android:hint="Full Name"
            android:layout_margin="15dp"
            android:textColorHint="#000000"
            android:layout_marginTop="25dp"
            android:padding="10dp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_address"
            android:layout_below="@id/settings_full_name"
            android:hint="Address"
            android:layout_margin="15dp"
            android:textColorHint="#000000"
            android:padding="10dp"
            />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/security_questions_btn"
        android:layout_below="@id/settings_address"
        android:text="Set Security Questions"
        android:fontFamily="@font/habibi"
        android:background="@drawable/buttons"
        android:textColor="#b1a9a9"
        android:layout_margin="15dp"
        android:textColorHint="#000000"
        android:padding="10dp"
        />

    </RelativeLayout>

