<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Buyer.ForgotPasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:id="@+id/rel_fp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:fontFamily="@font/habibi"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:id="@+id/pageTitle"/>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter your phone number"
        android:fontFamily="@font/habibi"
        android:id="@+id/fp_pn"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/rel_fp"/>

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following security questions"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/habibi"
        android:layout_below="@+id/fp_pn"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What was the name of your kindergarten teacher?"
        android:fontFamily="@font/habibi"
        android:id="@+id/question_1"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/title_questions"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is your mother's maiden name?"
        android:fontFamily="@font/habibi"
        android:id="@+id/question_2"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:layout_below="@+id/question_1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:fontFamily="@font/habibi"
        android:textColor="#b1a9a9"
        android:id="@+id/fp_pw_btn"
        android:background="@drawable/buttons"
        android:padding="14dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:textSize="25sp"/>

</RelativeLayout>