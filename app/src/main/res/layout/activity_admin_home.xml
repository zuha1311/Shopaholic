<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Admin.AdminHomeActivity"
    android:background="@drawable/side_nav_bar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Admin!"
        android:fontFamily="@font/habibi"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:id="@+id/admin_welcome"/>


    <Button
        android:id="@+id/maintain_products_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"

        android:layout_below="@+id/admin_welcome"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/habibi"
        android:text="Maintain Products"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/maintain_products_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/check_orders_btn"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="@font/habibi"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/check_orders_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/check_approved_orders_btn"
        android:background="@color/colorPrimaryDark"
        android:text="Check Approved Orders"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="@font/habibi"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/admin_logout_btn"
        android:background="@color/colorPrimaryDark"
        android:text="Admin Logout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="@font/habibi"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>